<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_goods_info_comment_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/fragment_goods_info_comment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fragment_goods_info_comment_item_pl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fragment_goods_info_comment_item_tiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/gray" />

</LinearLayout>