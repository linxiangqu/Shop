<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shangpinqu_item_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#40000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dip">

        <ImageView
            android:id="@+id/shangpinqu_item_img"
            android:layout_width="match_parent"
            android:layout_height="190dip"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/shangpinqu_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/shangpinqu_item_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#40000000"
            android:paddingBottom="6dp"
            android:paddingLeft="5dp"
            android:paddingTop="6dp"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shangpinqu_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/shangpinqu_item_sj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/shangpinqu_item_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@mipmap/icon_call" />

    </LinearLayout>

</LinearLayout>